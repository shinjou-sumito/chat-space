.chat-main__message__box
  .chat-main__message__box__info
    .chat-main__message__box__info__username
      = message.user.name
    .chat-main__message__box__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message__posting 
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present? 